<form action="/records" method="POST">

<label for="record-title"> Enter Record Title: </label> 
<input type="text" id="record_title" name="title">
<label for="artist_select"> Select an Artist:</label> 
<select> name="artist_id" id="artist-select">
<% for artist in artists %>
  <option value="<%= artist.id %>">
    <%= artist.name %>
    </option> 
    <% end %>
    </select>
  <label for="record-type"> Enter Record Type: </label> 
  <input type="text" id="record_type" name="record_type">
  <label for="record-quantity"> Enter Record Quantity: </label> 
  <input type="number" id="record_quantity" name="quantity">
  <label for="record-coverurl"> Enter Record Cover URL: </label> 
  <input type="text" id="record_coverurl" name="cover_url">
  <label for="record-genre"> Enter Record Genre: </label> 
  <input type="text" id="record_genre" name="genre">
  <label for="record-releaseyear"> Enter Record Release Year: </label> 
  <input type="number" id="record_releaseyear" name="release_year">

  <input type="submit" value="Create New Stock Item">

</form>



