<h1>Inventory List</h1>

<hr/>

<table>
  <tr>
    <th>Record Title</th>
    <th>Record Type</th>
    <th>Quantity</th>
    <th>Genre</th>
    <th>Year of Release</th>
    <th>Cover Art</th>
    <th>Stock Status</th>
  </tr>
</tr>
<% for record in @records %>
<td><%= record.title %></td>
<td><%= record.type %></td>
<td><%= record.quantity %></td>
<td><%= record.genre %></td>
<td><%= record.release_year %></td>
<td><img class="cover" src="<%= record.cover_url()%>"/></td>
<td><%= record.stock_level %></td>
</tr>
<% end %>
</table>
